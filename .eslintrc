{
  // I want to use babel-eslint for parsing!
  "parser": "babel-eslint",
  "env": {
    "browser": false,
    "node": true
  },
  // To give you an idea how to override rule options:
  "rules": {
    "quotes": [2, "single"],
    "eol-last": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0]
  },
  "globals" : {
     "it" : true,
     "describe" : true,
     "beforeEach" : true,
     "before" : true
  }
}

